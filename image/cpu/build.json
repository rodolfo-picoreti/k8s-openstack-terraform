{
  "variables": {
    "username": "{{env `OS_USERNAME`}}",
    "password": "{{env `OS_PASSWORD`}}",
    "auth-url": "{{env `OS_AUTH_URL`}}",
    "domain": "{{env `OS_USER_DOMAIN_NAME`}}",
    "tenant": "{{env `OS_PROJECT_NAME`}}",
    "region": "{{env `OS_REGION_NAME`}}",
    "ubuntu-image-name": "{{env `UBUNTU_IMAGE_NAME`}}",
    "flavor": "{{env `FLAVOR_NAME`}}",
    "provider-network-id": "{{env `PROVIDER_NET_ID`}}"
  },
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "{{user `auth-url`}}",
      "username": "{{user `username`}}",
      "password": "{{user `password`}}",
      "domain_name": "{{user `domain`}}",
      "region": "{{user `region`}}",
      "tenant_name": "{{user `tenant`}}",
      "flavor": "{{user `flavor`}}",
      "ssh_username": "ubuntu",
      "image_name": "k8s-cpu",
      "source_image_name": "{{user `ubuntu-image-name`}}",
      "networks": "{{user `provider-network-id`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./setup.bash"
    }
  ]
}